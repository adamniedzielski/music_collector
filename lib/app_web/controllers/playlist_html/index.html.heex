<.header>
  Listing Playlists
  <:actions>
    <.link href={~p"/playlists/new"}>
      <.button>New Playlist</.button>
    </.link>
  </:actions>
</.header>

<.link href={~p"/playlists"}>
  All
</.link>
|
<.link href={~p"/playlists?q=apple_music_only"}>
  Only in Apple Music
</.link> |
<.link href={~p"/playlists?q=spotify_only"}>
  Only in Spotify
</.link>

<.table id="playlists" rows={@playlists} row_click={&JS.navigate(~p"/playlists/#{&1}")}>
  <:col :let={playlist} label="Name"><%= playlist.name %></:col>
  <:action :let={playlist}>
    <div class="sr-only">
      <.link navigate={~p"/playlists/#{playlist}"}>Show</.link>
    </div>
    <.link navigate={~p"/playlists/#{playlist}/edit"}>Edit</.link>
  </:action>
  <:action :let={playlist}>
    <.link href={~p"/playlists/#{playlist}"} method="delete" data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>
